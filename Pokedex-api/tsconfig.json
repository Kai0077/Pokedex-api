{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext", // This requires imports to have .js extensions
    "moduleResolution": "NodeNext", // Ensure this matches "module"
    "strict": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "types": ["node"],
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "outDir": "./dist"
  },
  "exclude": ["node_modules"],
  "ts-node": {
    "esm": true, // <--- THIS FIXES THE ERROR
    "experimentalSpecifierResolution": "node"
  }
}
